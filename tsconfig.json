{
  "exclude": ["node_modules", "**/*.test.ts"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "lib": ["dom", "es5", "es2016", "es2018"]
  }
}
