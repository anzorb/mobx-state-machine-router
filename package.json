{
  "private": true,
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' run build",
    "build:watch": "pnpm -r run build --watch",
    "clean": "rimraf packages/*/dist",
    "lint": "eslint 'packages/**/src/**/*.ts' --ignore-pattern '**/*.test.ts' --ignore-pattern '**/*.d.ts'",
    "lint:fix": "eslint 'packages/**/src/**/*.ts' --ignore-pattern '**/*.test.ts' --ignore-pattern '**/*.d.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit --colors",
    "test:ci": "jest --ci --coverage",
    "prettier:check": "prettier --check 'packages/**/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "prettier:write": "prettier --write 'packages/**/src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "prepare": "pnpm run build",
    "prerelease": "pnpm run prettier:write && pnpm run test:coverage && pnpm run build",
    "release:patch": "cd packages/core && npm version patch --no-git-tag-version && cd ../url-persistence && npm version patch --no-git-tag-version",
    "release:minor": "cd packages/core && npm version minor --no-git-tag-version && cd ../url-persistence && npm version minor --no-git-tag-version",
    "release:major": "cd packages/core && npm version major --no-git-tag-version && cd ../url-persistence && npm version major --no-git-tag-version"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "eslint": "^9.22.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.6",
    "tsup": "^8.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.24.1"
  },
  "version": "0.0.1"
}
